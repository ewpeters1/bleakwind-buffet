<UserControl x:Class="PointOfSale.MenuOverheadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="300" MaxWidth="500"/>
        </Grid.ColumnDefinitions>

        <Border Name="menuBorder" BorderThickness="30">
            <local:MenuSelection/>
        </Border>

        <Border Name ="ticketBorder" Grid.Column="1" BorderThickness="30">
            <local:CurrentTicketControl/>
        </Border>
    </Grid>
</UserControl>
