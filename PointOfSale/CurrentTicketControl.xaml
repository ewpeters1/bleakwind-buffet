<UserControl x:Class="PointOfSale.CurrentTicketControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Height="60" FontSize="20" FontFamily="Tahoma"
                 Background="ForestGreen" Foreground="White" >
            Complete Order
        </Button>
        <TextBlock DockPanel.Dock="Top" FontWeight= "Bold" TextAlignment="Center" FontSize="20">
            Order Number (#)
        </TextBlock>
        <TextBox DockPanel.Dock="Top" FontWeight= "Bold" TextAlignment="Center" FontSize="20"/>
        <TextBox Name ="itemTextBox" DockPanel.Dock="Bottom"/>
    </DockPanel>

</UserControl>
