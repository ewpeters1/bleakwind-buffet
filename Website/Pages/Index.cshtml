@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="text-center">
    <h1 class="display-4"> Welcome To Bleakwind Buffet!</h1>
    <p>
        We at Bleakwind Buffet are proud to bring you authentic fantasy meals straight from the world of Skyrim.
        Shake the blood off your sword and sake your thirst with one of our old-fashioned sailor sodas.
        Hack into a Smokehouse Skeleton with your dagger. Or vanquish the the mighty Thalmor Triple Burger!
        You’ve had a hard adventure and earned your loot, so spend it with us!
    </p>
    <h2>
        Combo Information
    </h2>
    <p>
        Do know that you may combine any of our Delicious Skyrim-Themed Items, One entree, One side, and One drink as a Combo, and save $1 on you order!
    </p>

    <form>
        <div id="search">
            <input type="text" name="SearchTerms" value="@Model.SearchTerms" />
            <input type="submit" value="Search">
        </div>

        <h4 class="menu-item">Item Type Selection Search</h4>
        @foreach (String type in BleakwindBuffet.Data.Menu.Items)
         {
            <label>
                <input type="checkbox" name="ItemTypeResults" value="@type" checked="@Model.ItemTypeResults.Contains(type)" />
                @type
            </label>
         }

        <h4>Price</h4>
        <div>
            Between
            <input name="PriceMin" type="number" min="0" max="8.50" step="0.25" placeholder="min" value="@Model.PriceMin" />
            and
            <input name="PriceMax" type="number" min="0" max="8.50" step="0.25" placeholder="max" value="@Model.PriceMax" />
        </div>

        <h4>Calories</h4>
        <div>
            Between
            <input name="CaloriesMin" type="number" min="0" max="990" step="10" placeholder="min" value="@Model.CaloriesMin" />
            and
            <input name="CaloriesMax" type="number" min="0" max="990" step="10" placeholder="max" value="@Model.CaloriesMax" />
        </div>
        <div>
            @if ((Model.ItemTypeResults.Contains("Entree") || Model.ItemTypeResults == null || Model.ItemTypeResults.Count() == 0))
            {
                <h2 class="entrees">Entrees</h2>
            }
            @foreach (BleakwindBuffet.Data.IOrderItem entree in Model.Menus)
            {
                @if (entree is BleakwindBuffet.Data.Entrees.Entree)
                {
                    <div class="menu-item">
                        <h3 class="name">@entree.ToString()</h3>
                        <h3 class="price">@entree.Price</h3>
                        <h3 class="calories">@entree.Calories</h3>
                    </div>
                }
            }
            @if ((Model.ItemTypeResults.Contains("Side") || Model.ItemTypeResults == null || Model.ItemTypeResults.Count() == 0))
            {
                <h2 class="sides">Sides</h2>
            }
            @foreach (BleakwindBuffet.Data.IOrderItem side in Model.Menus)
            {
                @if (side is BleakwindBuffet.Data.Sides.Side)
                {
                    <div class="menu-item">
                        <h3 class="name">@side.ToString()</h3>
                        <h3 class="price">@side.Price</h3>
                        <h3 class="calories">@side.Calories</h3>
                    </div>
                }
            }
            @if ((Model.ItemTypeResults.Contains("Drink") || Model.ItemTypeResults == null || Model.ItemTypeResults.Count() == 0))
            {
                <h2 class="drinks">Drinks</h2>
            }
            @foreach (BleakwindBuffet.Data.IOrderItem drink in Model.Menus)
            {
                @if (drink is BleakwindBuffet.Data.Drinks.Drink)
                {
                    <div class="menu-item">
                        <h3 class="name">@drink.ToString()</h3>
                        <h3 class="price">@drink.Price</h3>
                        <h3 class="calories">@drink.Calories</h3>
                    </div>
                }
            }
        </div>
    </form>
</div>